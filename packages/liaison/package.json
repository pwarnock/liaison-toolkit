{
  "name": "@pwarnock/liaison",
  "version": "0.1.0",
  "description": "Liaison - CLI framework for Liaison Toolkit with plugin architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "liaison": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm",
    "dev": "bun build ./src/cli.ts --outdir ./dist --target node --format esm --watch",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run -- --grep 'integration'",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:bdd": "cucumber-js",
    "test:a11y": "pa11y-ci",
    "test:security": "snyk test && audit-ci --moderate",
    "test:mutation": "stryker run",
    "lint": "oxlint .",
    "type-check": "bun build ./src/cli.ts --no-bundle --target node",
    "start": "bun ./src/cli.ts"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "chalk": "^5.3.0",
    "@pwarnock/toolkit-core": "^0.1.0"
  },
  "optionalDependencies": {
    "@pwarnock/opencode_config": "^0.1.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@playwright/test": "^1.40.0",
    "@stryker-mutator/core": "^7.2.0",
    "@stryker-mutator/typescript-checker": "^7.2.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.4.0",

    "@vitest/coverage-v8": "^2.0.0",
    "audit-ci": "^6.6.1",
    "oxlint": "^0.7.0",

    "pa11y-ci": "^3.1.0",
    "snyk": "^1.1300.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "cli",
    "liaison",
    "workflow",
    "automation",
    "plugin",
    "toolkit"
  ],
  "author": "Liaison Toolkit Contributors",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md", 
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pwarnock/liaison-toolkit.git",
    "directory": "packages/liaison"
  },
  "bugs": {
    "url": "https://github.com/pwarnock/liaison-toolkit/issues"
  },
  "homepage": "https://github.com/pwarnock/liaison-toolkit#readme"
}
