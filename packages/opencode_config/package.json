{
  "name": "@pwarnock/opencode_config",
  "version": "1.0.0",
  "description": "OpenCode configuration package for liaison-toolkit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun --watch src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "setup": "bun src/scripts/setup.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "opencode",
    "ai",
    "agents",
    "configuration"
  ],
  "author": "Patrick Warnock",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^25.0.2"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "bun-types": "latest",
    "eslint": "^8.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./templates": "./templates/",
    "./scripts": "./src/scripts/"
  },
  "files": [
    "dist",
    "templates",
    "src/scripts"
  ]
}